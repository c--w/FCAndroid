<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/startSolo"
        style="@style/start_button_text"
        android:text="Solo" />

    <Button
        android:id="@+id/startNetwork"
        style="@style/start_button_text"
        android:text="Multiplayer (local WIFI)" />

    <Button
        android:id="@+id/startNetworkOnline"
        style="@style/start_button_text"
        android:text="Multiplayer (online)" android:visibility="gone"/>
</LinearLayout>