<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="button_text">
        <item name="android:textSize">@dimen/controls_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/controls_padding</item>
        <item name="android:layout_width">@dimen/controls_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/controls_padding</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="start_button_text">
        <item name="android:textSize">@dimen/start_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/controls_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/controls_padding</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="radio_button_text">
        <item name="android:textSize">@dimen/start_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/rb_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>